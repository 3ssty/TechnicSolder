{
	"name": "solder/solder",
	"type": "application",
	"description": "Technic Solder API using Laravel Framework",
	"keywords": ["technic", "solder", "api"],
	"homepage": "https://github.com/TechnicPack/TechnicSolder",
	"license": "MIT",
	"authors": [{
               "name": "Ryan Cohen",
               "email": "sctsnipe@gmail.com",
               "homepage": "http://www.sctgaming.com",
               "role": "Developer"
               },
               {
               "name": "Dylan Page",
               "email": "dylandcpage@gmail.com",
               "homepage": "http://www.pagefortress.com",
               "role": "Developer"
               	}],
	"require": {
		"php": ">=5.5.0",
		"laravel/framework": "4.2.*",
		"patricktalmadge/bootstrapper": "5.4.*",
		"intervention/image": "2.0.*",
        "doctrine/dbal": "~2.5",
        "composer/composer": "1.0.0-alpha9",
        "knplabs/github-api": "1.4.*"
	},
	"require-dev": {
		"barryvdh/laravel-debugbar": "1.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"pre-update-cmd": [
			"rm bootstrap/compiled.php"
		],
		"post-install-cmd": [
			"cp -r app/config-sample app/config",
			"cp app/database-sample/production.sqlite app/database/production.sqlite",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
